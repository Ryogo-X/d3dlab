<Window x:Class="D3DLab.Viewer.Presentation.OpenFiles.OpenFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D3DLab.Viewer.Presentation.OpenFiles"
        mc:Ignorable="d" Background="{StaticResource BlackBackgroundColor}" ResizeMode="CanResize"
        Title="Open files dialog" Height="450" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="5" HorizontalAlignment="Stretch" >
            <Button Content="New Project" />
            <Button Content="Open Project" Margin="5,0"/>
            <Button Style="{StaticResource ImageButton}" Content="{StaticResource NormalFileIconCanvas}"
                    />
        </DockPanel>

        <ListBox ItemsSource="{Binding RecentFiles}" Grid.Row="1" IsSynchronizedWithCurrentItem="True">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
