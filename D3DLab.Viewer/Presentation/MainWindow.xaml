                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="5,5,0,5" Command="{Binding CameraFocusToAll}">
                    <Grid>
                        <Canvas Width="40" Margin="5,2,0,0">
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
