    <!-- Normal Size -->
    
    <Canvas x:Key="NormalFolderIconCanvas" Width="40" Margin="3,2,0,0">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1.4" ScaleY="1.4" />
            </TransformGroup>
        </Canvas.RenderTransform>
        <Path Fill="White" Data="{StaticResource FolderIconPathGeometry}"/>
    </Canvas>
