            <TransformGroup>
                <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
            </TransformGroup>
        </Canvas.RenderTransform>
        <Path Fill="White" Data="{StaticResource RemoveIconPathGeometry}"/>
    </Canvas>
    <Canvas x:Key="SmallFolderIconCanvas" x:Shared="False" Width="15" Height="15" Margin="1,0,1,0">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
            </TransformGroup>
        </Canvas.RenderTransform>
        <Path Fill="White" Data="{StaticResource FolderIconPathGeometry}"/>
    </Canvas>
    <Canvas x:Key="SmallLockIconCanvas" x:Shared="False" Width="15" Height="15" Margin="1,0,1,0">
